        "id": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "artist": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Playlist": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "is_published": {
          "type": "boolean"
        },
        "published_at": {
          "type": "string",
          "format": "date-time"
        },
        "songs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PlaylistSong"
          }
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "PlaylistSong": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "artist": {
          "type": "string"
        },
        "added_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
